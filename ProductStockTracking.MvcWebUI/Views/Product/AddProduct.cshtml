@section scripts{

    <script>


        function addBarcode(id) {

            

            var postdata = {phoneId :id };
            $.post("@Url.Action("AddBarcodeToProduct","Product")", postdata, function (res) {

                var resObj=jQuery.parseJSON(res)
                if (resObj.Success) {

                    $("#barcodeShow").text(resObj.Data[0]);
                    $("#transactionShow").text(resObj.Data[1]);
                    $("#deliveryPriceShow").text(resObj.Data[2]);
                    $("#deliveryDateShow").text(resObj.Data[3]);


                }
                else {
                   
                    swal("İşlem Başarısız!", resObj.Message, "error");


                }
            }).fail(function () {
                    

                swal("İşlem Başarısız!", resObj.Message, "error");
            });

        }

    </script>

    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            function message() {
                swal("İşlem Başarısız!", "@ViewBag.ErrorMessage", "error");

            }
            message();


        </script>
    }

    else
    {
        <script>

            function message() {

            }

            message();


        </script>
    }



}

