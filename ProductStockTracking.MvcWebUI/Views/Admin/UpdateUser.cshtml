@model ProductStockTracking.Entities.Concrete.User
@{
    ViewBag.Title = "UpdateUser";
}

<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12">

            @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post, new { @class = "kt-form", id = "kt-form" }))
            {
                @Html.AntiForgeryToken()



                <!--begin::Portlet-->
                <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                    <div class="kt-portlet__head kt-portlet__head--lg">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">Yeni Kullanıcı <small>Dikkat !</small></h3>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <a href="#" class="btn btn-clean kt-margin-r-10">
                                <i class="la la-arrow-left"></i>
                                <span class="kt-hidden-mobile">Back</span>
                            </a>

                            <div class="btn-group">

                                <button type="submit" class="btn btn-brand">

                                    <span class="kt-hidden-mobile">
                                        <i class="la la-check"></i>
                                        Kaydet
                                    </span>

                                </button>


                            </div>
                        </div>
                    </div>
                    <div class="kt-portlet__body">

                        <div class="row">
                            <div class="col-xl-2"></div>
                            <div class="col-xl-8">
                                <div class="kt-section kt-section--first">
                                    <div class="kt-section__body">
                                        <h3 class="kt-section__title kt-section__title-lg">Kullanıcı Bilgileri :</h3>
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.Password)
                                        <div class="form-group row">

                                            <label class="col-3 col-form-label">Kullanıcı Adı</label>
                                            <div class="col-9">
                                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-3 col-form-label">Ad</label>
                                            <div class="col-9">
                                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-3 col-form-label">Soyad</label>
                                            <div class="col-9">
                                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-3 col-form-label">Email</label>
                                            <div class="col-9">

                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                

                                        <div class="form-group row">
                                            <label class="col-3 col-form-label">Sistem Durumu</label>
                                            <div class="col-9">

                                                <div class="custom-control custom-switch">
                                                    @Html.CheckBoxFor(model => model.State, new { @class = "custom-control-input" })

                                                    <label class="custom-control-label" for="State"></label>
                                                </div>



                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-2"></div>
                            </div>

                        </div>
                    </div>
                </div>

            }
            <!--end::Portlet-->
        </div>
    </div>
</div>


@section scripts{



    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            function message() {
                debugger;
                console.log(@ViewBag.ErrorMessage);
                swal("İşlem Başarısız!", @ViewBag.ErrorMessage, "error");

            }

            $( document ).ready(function() {
    message();
});



        </script>
    }

    else
    {
        <script>

            function message() {

            }

            message();


        </script>
    }
    <script src="~/Scripts/jquery-3.5.0.min.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


}
